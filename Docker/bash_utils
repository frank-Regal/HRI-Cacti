cacti-start(){
    #add xhost permissions for docker to use display
    xhost +local:docker
    echo "added docker xhost permissions"
    export UID_GID=$(id -u):$(id -g)
    export UNAME=$(whoami)
    echo "gathering host user info... $UNAME $UID_GID"
    docker compose -f $HRI_CACTI_GIT_DIR/Docker/docker-compose.yaml up -d
}

cacti-stop(){
    # stop the container and remove it
    docker compose -f $HRI_CACTI_GIT_DIR/Docker/docker-compose.yaml down
}

cacti-rm(){
    # remove the docker image
    docker image rm -f hri_cacti_i
}

cacti-shell() {
    # open a shell in the container
    docker exec -ti -u $USER -w ~/ hri_cacti_c bash -l
}

cacti-build() {
    # if the container is running, stop it
    if [ "$(docker ps -q -f name=hri_cacti_c)" ]; then
        echo "stopping container hri_cacti_c..."
        docker compose -f $HRI_CACTI_GIT_DIR/Docker/docker-compose.yaml down
    fi
    # build the container from the docker-compose file
    docker compose -f $HRI_CACTI_GIT_DIR/Docker/docker-compose.yaml build
}

cacti-dir() {
    # Set the directory of the docker_workshop repo on the host
	# Usage: rosd-dir path_to_rosd_docker_dir
	# Alternatively, add it to your .bashrc for convenience
    export HRI_CACTI_GIT_DIR=$1
}

cacti-log() {
    # view the logs of the picogk container
    docker logs rosd_c
}